{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shelfsend",
  "version": "0.1.0",
  "identifier": "io.github.ahmetefeserdar.shelfsend",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "shelfsend",
        "width": 800,
        "height": 600,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "permissions": [
    "core:default",
    "core:window:default",
    "core:path:default",
    "fs:default"
  ]
}
